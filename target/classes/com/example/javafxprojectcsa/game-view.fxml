<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxprojectcsa.GameView">
   <bottom>
      <HBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Enter in desired angle:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="angleText">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </TextField>
            <Button fx:id="angleBtn" mnemonicParsing="false" onAction="#onAngleBtnClick" text="Enter" />
            <Label fx:id="errorLabel" />
            <Button fx:id="shootBtn" mnemonicParsing="false" onAction="#onShootBtnCLick" text="SHOOT!" visible="false" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <right>
      <ImageView fitHeight="318.0" fitWidth="91.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_CENTER" />
   </right>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Java Basketball Association">
               <font>
                  <Font size="22.0" />
               </font>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </Label>
            <Label alignment="CENTER_RIGHT" text="Score">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
   </top>
   <left>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="216.0" fitWidth="93.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fitHeight="60.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </left>
</BorderPane>
